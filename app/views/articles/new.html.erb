<%= form_for @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br>
  <%= f.label :author %>
  <%= f.text_field :author, value: current_user %>
  <br>
  <%= f.submit %>
<% end %>

<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |error| %>
    <%= error %>
    <br>
  <% end %>
<% end %>